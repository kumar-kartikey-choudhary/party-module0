<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-2.1.xsd">

    <service verb="create" noun="ContactMech" type="inline">
        <in-parameters>
            <parameter name="contactMechId"/>
            <parameter name="contactMechTypeId" required="true"/>
            <parameter name="infoString" />
            <parameter name="createDate" />
        </in-parameters>
        <out-parameters>
            <parameter name="contactMechId" required="true"/>
        </out-parameters>
        <actions>
            <entity-make-value entity-name="com.party.ContactMech" value-field="contactMech" map="context"/>
            <if condition="!contactMech.contactMechId">
                <entity-sequenced-id-primary value-field="contactMech"/>
            </if>
            <entity-create value-field="contactMech"/>
            <set field="contactMechId" from="contactMech.contactMechId"/>
        </actions>
    </service>
</services>