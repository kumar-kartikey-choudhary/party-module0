<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        require-authentication="anonymous-all">

    <actions>
        <!--Entity finds for the screen PartyContactMech entity-->
        <entity-find entity-name="com.party.PartyContactMech" list="partyContactMechList"><search-form-inputs/></entity-find>
    </actions>
    <widgets>
        <!--Container for the screen PartyContactMech entity-->
        <container>
            <label text="Party Contact Mechanism List" type="h2"/>
            <form-list name="PartyContactMech" list="partyContactMechList">
                <field name="partyId">
                    <header-field title="Party ID" show-order-by="true"/>
                    <default-field><display/></default-field>
                </field>
                <field name="contactMechId">
                    <header-field title="Contact Mech ID" show-order-by="true"/>
                    <default-field><display/></default-field>
                </field>
                <field name="fromDate">
                    <header-field title="From Date" show-order-by="true"/>
                    <default-field><display/></default-field>
                </field>
                <field name="thruDate">
                    <header-field title="Through Date" show-order-by="true"/>
                    <default-field><display/></default-field>
                </field>
            </form-list>
        </container>

    </widgets>
</screen>
